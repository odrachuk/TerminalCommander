<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/commander_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/commander_text_padding_left"
            android:paddingRight="@dimen/commander_text_padding_right">
        <TextView
                android:id="@+id/terminal_out_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="@style/Commander_Out_Text_View_Theme"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/terminal_out_text_view">
            <TextView
                    android:id="@+id/terminal_prompt_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Commander_Out_Text_View_Theme"/>
            <EditText
                    android:id="@+id/terminal_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/terminal_prompt_text_view"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:inputType="text"
                    style="@style/Commander_Out_Text_View_Theme"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>

