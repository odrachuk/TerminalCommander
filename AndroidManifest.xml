<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.softsandr.terminal"
          android:versionCode="3"
          android:versionName="1.0.2">
    <!-- For reading account information -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.BROADCAST_STICKY"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk android:minSdkVersion="14"/>

    <application
            android:label="@string/app_name"
            android:icon="@drawable/terminal_icon"
            android:theme="@style/Terminal_Theme"
            android:hardwareAccelerated="true">
        <activity android:name=".activity.terminal.TerminalActivity"
                  android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.commander.CommanderActivity"
                  android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name=".activity.progress.TerminalProgressActivity"
                  android:theme="@style/Transparent_Activity_Theme"/>
    </application>
</manifest>
