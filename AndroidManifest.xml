<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.drk.terminal"
		  android:versionCode="1"
		  android:versionName="1.0">
    <!-- For reading account information -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

	<uses-sdk android:minSdkVersion="11"/>

	<application
            android:label="@string/app_name"
            android:icon="@drawable/terminal_icon"
            android:theme="@style/thin_action_bar">
		<activity android:name=".ui.TerminalActivity"
				  android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
        <activity android:name=".ui.CommanderActivity"
                  android:windowSoftInputMode="stateVisible|adjustResize"/>
	</application>
</manifest>
